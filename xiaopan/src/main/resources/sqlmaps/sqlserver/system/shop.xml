<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="shopNpc">
	<!-- 返回值映射关系 -->
	<resultMap id="shopRstMap" type="shop">
		<id property="id" column="id" />
		<result property="title" column="title" />
		<result property="keyword" column="keyword" />
		<result property="description" column="description" />
		<result property="contents" column="contents" />
		<result property="address" column="address" />
		<result property="tel" column="tel" />
		<result property="contacter" column="contacter" />
		<result property="imagePath" column="imagePath" />
		<result property="typeIds" column="typeIds" />
		<result property="click" column="click" />
		<result property="pingnum" column="pingnum" />
		<collection property="types" javaType="java.util.ArrayList" ofType="type" select="typeNpc.queryByShopId" column="id" />
	</resultMap>

	<!-- 查询条件 -->
	<sql id="query_where">
		<where>
			<if test="shop != null">
				<if test="shop.id != null and shop.id != ''">
					and T.id = #{shop.id}
				</if>
			</if>
		</where>
	</sql>
	
	<select id="queryBySiteAndType" resultMap="shopRstMap" parameterType="map">
		EXEC [dbo].[queryShopBySiteAndType]
		@siteId = '${siteId}',
		@searchName = '${typeName}'
	</select>

	<select id="query" resultMap="shopRstMap" parameterType="map">
		SELECT T.* FROM SHOP T
		<include refid="query_where" />
		order by T.title asc
	</select>
	
	<insert id="add" parameterType="shop">
		<selectKey resultType="java.lang.String" keyProperty="id" order="AFTER" >
			SELECT @@IDENTITY
		</selectKey>
		INSERT INTO SHOP(
			title, keyword, description,
			contents, address, tel,
			contacter, imagePath, siteId
		) VALUES (
			#{title}, #{keyword}, #{description},
			#{contents}, #{address}, #{tel},
			#{contacter}, #{imagePath}, #{siteId}
		)
	</insert>
	
	<insert id="addTypes" parameterType="shop">
		<foreach collection="types" item="type">
		INSERT INTO SHOPTYPE(
			shopId, typeId
		) VALUES (
			#{id}, #{type.id}
		)
		</foreach>
	</insert>
	
	<update id="update" parameterType="shop">
		update SHOP set
			title = #{title},
			keyword = #{keyword},
			description = #{description},
			contents = #{contents},
			address = #{address},
			tel = #{tel},
			contacter = #{contacter},
			imagePath = #{imagePath},
			siteId = #{siteId}
			
			WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="shop">
		delete from SHOP where id = #{id}
	</delete>
	
	<delete id="deleteTypes" parameterType="shop">
		delete from SHOPTYPE where shopId = #{id}
	</delete>
</mapper>