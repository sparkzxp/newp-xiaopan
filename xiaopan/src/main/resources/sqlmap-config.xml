<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 配置设置 -->
	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="aggressiveLazyLoading" value="true" />
		<setting name="autoMappingBehavior" value="PARTIAL" />
		<setting name="defaultExecutorType" value="SIMPLE" />
		<setting name="defaultStatementTimeout" value="25000" />
		<setting name="lazyLoadTriggerMethods" value="equals,clone,hashCode,toString" />
	</settings>
	
	<typeAliases>
		<typeAlias alias="user" type="com.newp.xiaopan.bean.system.User" />
		<typeAlias alias="arctype" type="com.newp.xiaopan.bean.system.Arctype" />
		<typeAlias alias="type" type="com.newp.xiaopan.bean.system.Type" />
		<typeAlias alias="site" type="com.newp.xiaopan.bean.system.Site" />
		<typeAlias alias="shop" type="com.newp.xiaopan.bean.system.Shop" />
		<typeAlias alias="key" type="com.newp.xiaopan.bean.system.Key" />
		<typeAlias alias="archive" type="com.newp.xiaopan.bean.system.Archive" />
		<typeAlias alias="ads" type="com.newp.xiaopan.bean.system.Ads" />
		<typeAlias alias="resource" type="com.newp.xiaopan.bean.system.Resource" />
		<typeAlias alias="role" type="com.newp.xiaopan.bean.system.Role" />
	</typeAliases>
	<mappers>
		<mapper resource="sqlmaps/mysql/system/user.xml" />
		<mapper resource="sqlmaps/mysql/system/arctype.xml" />
		<mapper resource="sqlmaps/mysql/system/type.xml" />
		<mapper resource="sqlmaps/mysql/system/site.xml" />
		<mapper resource="sqlmaps/mysql/system/shop.xml" />
		<mapper resource="sqlmaps/mysql/system/key.xml" />
		<mapper resource="sqlmaps/mysql/system/archive.xml" />
		<mapper resource="sqlmaps/mysql/system/ads.xml" />
		<mapper resource="sqlmaps/mysql/system/resource.xml" />
		<mapper resource="sqlmaps/mysql/system/role.xml" />
	</mappers>
</configuration>  
