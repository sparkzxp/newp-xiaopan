<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="adsNpc">
	<!-- 返回值映射关系 -->
	<resultMap id="adsRstMap" type="ads">
		<result property="id" column="id" />
		<result property="title" column="title" />
		<result property="imageurl" column="imageurl" />
		<result property="weburl" column="weburl" />
		<result property="startdate" column="startdate" />
		<result property="enddate" column="enddate" />
		<!-- <result property="error" column="error" /> -->
		<result property="place" column="place" />
		<result property="address" column="address" />
		<result property="tel" column="tel" />
		<result property="latitude" column="latitude" />
		<result property="longitude" column="longitude" />
		<result property="indexShow" column="indexShow" />
	</resultMap>

	<!-- 查询条件 -->
	<sql id="query_where">
		<where>
			<if test="ads != null">
				<if test="ads.id != null and ads.id != ''">
					and T.id = #{ads.id}
				</if>
			</if>
		</where>
	</sql>

	<select id="query" resultMap="adsRstMap" parameterType="map">
		SELECT T.* FROM ADS T
		<include refid="query_where" />
		order by T.place asc, T.title asc
	</select>
	
	<insert id="add" parameterType="ads">
		<selectKey resultType="java.lang.String" keyProperty="id" order="AFTER" >
			SELECT @@IDENTITY
		</selectKey>
		INSERT INTO ADS(
			title, imageurl, weburl,
			startdate, enddate, indexShow,
			place, address, tel,
			latitude, longitude
		) VALUES (
			#{title}, #{imageurl}, #{weburl},
			getDate(), getDate(), #{indexShow},
			#{place}, #{address}, #{tel},
			#{latitude}, #{longitude}
		)
	</insert>
	
	<update id="update" parameterType="ads">
		update ADS set
			title = #{title},
			imageurl = #{imageurl},
			weburl = #{weburl},
			startdate = getDate(),
			enddate = getDate(),
			indexShow = #{indexShow},
			place = #{place},
			address = #{address},
			tel = #{tel},
			latitude = #{latitude},
			longitude = #{longitude}
			
			WHERE id = #{id}
	</update>
	
	<delete id="delete" parameterType="ads">
		delete from ADS where id = #{id}
	</delete>
</mapper>