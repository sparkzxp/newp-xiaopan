<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="mobile" extends="root" namespace="/mobile">
		<default-action-ref name="exceptionError" />
		<action name="mobile_*" class="mobileAction" method="{1}">
			<result name="toTypeList">/jsp/mobile/type_list.jsp</result>
			<result name="toSearch">/jsp/mobile/search.jsp</result>
			<result name="toShop">/jsp/mobile/shop.jsp</result>
			<result name="toPhone">/jsp/mobile/phone.jsp</result>
		</action>
	</package>

</struts>

